{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@pcontext/shared/types": ["../../packages/shared/src/types/index.ts"],
      "@pcontext/*": ["../../packages/*/src/index.ts"]
    },
    "resolveJsonModule": true,
    // "composite": true, // 必须开启
    "noEmit": true,
    "declaration": true,     // 必须生成声明文件
    "declarationMap": true,  // 建议开启，方便点击跳转到源码
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "drizzle-sqlite.config.ts",
    "drizzle-pg.config.ts",
    "src/**/*.ts",
    "scripts/**/*.ts",
  ]
}
